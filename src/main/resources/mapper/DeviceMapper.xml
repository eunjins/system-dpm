<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.dpm.system.device.DeviceRepository">
    <select id="selectAll"
            parameterType="hashMap"
            resultType="device">
        SELECT
        ID
        , NAME
        , HOST_NAME
        , IP_ADDRESS
        , INSERT_DATE
        , JDK_VERSION
        , STATUS
        FROM DEVICE
        <where>
            <if test="device != null and device !=''">
                <if test="device.name != null and device.name != ''">
                    AND NAME LIKE '%${device.name}%'
                </if>
                <if test="device.insertDate != null and device.insertDate != ''">
                    AND INSERT_DATE = DATE_FORMAT(#{device.insertDate}, '%Y-%m-%d')
                </if>
                <if test="device.status != null and device.status != ''">
                    AND STATUS = #{device.status}
                </if>
            </if>
        </where>
        ORDER BY NAME
        <if test="pageNo != null and pageNo != ''">
            LIMIT ${pageNo}, 10
        </if>
    </select>

    <select id="select"
            parameterType="device"
            resultType="device">
        SELECT
        ID
        , NAME
        , HOST_NAME
        , IP_ADDRESS
        , INSERT_DATE
        , JDK_VERSION
        , STATUS
        FROM DEVICE
        <where>
            <if test="id != null and id != ''">
                AND ID = #{id}
            </if>
        </where>
    </select>

    <insert id="insert"
            parameterType="device">
        INSERT INTO DEVICE
            (ID, NAME, HOST_NAME, IP_ADDRESS, INSERT_DATE, JDK_VERSION)
        VALUES (#{id}, #{name}, #{hostName}, #{ipAddress}, #{insertDate}, #{jdkVersion})
    </insert>

    <update id="update"
            parameterType="device">
        UPDATE DEVICE
        <set>
            <if test="name != null and name != ''">
                NAME = #{name},
            </if>
            <if test="status != null and status != ''">
                STATUS = #{status},
            </if>
            <if test="ipAddress != null and ipAddress != ''">
                IP_ADDRESS = #{ipAddress},
            </if>
            <if test="hostName != null and hostName != ''">
                HOST_NAME = #{hostName},
            </if>
            <if test="jdkVersion != null and jdkVersion != ''">
                JDK_VERSION = #{jdkVersion},
            </if>
        </set>
        <where>
            <if test="id != null and id != ''">
                AND ID = #{id}
            </if>
        </where>
    </update>
</mapper>